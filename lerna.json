{
  "version": "2.7.3",
  "packages": [
    "packages/adapters",
    "packages/core",
    "packages/tools",
    "packages/streaming-image-volume-loader",
    "packages/dicomImageLoader"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.yml", "*.spec.js", "*.test.js"],
      "message": "chore(release): publish %s",
      "allowBranch": ["main", "beta"]
    },
    "version": {
      "allowBranch": ["main", "beta"],
      "conventionalCommits": true,
      "conventionalGraduate": true,
      "yes": true,
      "message": "chore(release): publish %s [skip ci]",
      "forcePublish": true
    }
  }
}
